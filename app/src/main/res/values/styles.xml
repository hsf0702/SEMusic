<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_bg</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="toolbarStyle.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/medium_sea_green</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:minHeight">@dimen/tool_bar_height</item>
        <item name="toolbarNavigationButtonStyle">@style/toolbarNavigationButtonStyle</item>
    </style>

    <style name="toolbarStyle.Transparent" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">@dimen/tool_bar_height</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="toolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/tool_bar_height</item>
    </style>

    <style name="AppTheme.Welcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="WhiteTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <declare-styleable name="AspectRatioView">
        <attr name="aspectRatio" format="string" />
    </declare-styleable>


</resources>
