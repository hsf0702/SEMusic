<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/content_img"
        android:layout_width="@dimen/content_image_head"
        android:layout_height="@dimen/content_image_head"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:scaleType="centerCrop">

        <TextView
            android:id="@+id/content_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="一路向北" />

        <TextView
            android:id="@+id/content_item_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray"
            android:textSize="13sp"
            tools:text="一路向北" />
    </LinearLayout>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:src="@drawable/player_btn_more_black" />
</merge>